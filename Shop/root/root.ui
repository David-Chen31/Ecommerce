   <string notr="true">/* 全局背景色为白色，字体颜色为深灰色，字体大小为20 */
QWidget {
    background-color: #FFFFFF;
    font-size: 20px;
    color: #333333;
    font-family: &quot;Segoe UI&quot;, sans-serif;
}

/* 设置QLabel的基本样式 */
QLabel {
    font-size: 20px;
    color: #333333;
    font-weight: normal;
    padding: 5px;
}

/* 设置标题标签的样式 */
QLabel#merchantName {
    font-size: 24px;
    font-weight: bold;
    color: #1E90FF; /* 天蓝色 */
}

/* 设置菜单树（QTreeWidget） */
QTreeWidget {
    background-color: #FFFFFF;
    border: 1px solid #1E90FF;
    border-radius: 10px;
    padding: 15px;
    font-size: 20px;
    font-weight: normal;
    color: #333333;
}


QTreeWidget::item {

    padding: 12px;

}



QTreeWidget::item:hover {

    background-color: #E6F7FF;  /* 悬浮时的背景色 */

    border-color: #1E90FF;

}



QTreeWidget::item:selected {

    background-color: #1E90FF;

    color: white;

    border-color: #1E90FF;

}


/* 设置QTreeWidget项默认样式 */
QTreeWidget::item {
    font-size: 20px;
    padding: 12px;
    min-height: 40px; /* 增加每项的高度 */
    background-color: transparent; /* 默认背景透明 */
    color: #333333; /* 默认字体颜色 */

    margin-bottom: 10px;
    border-radius: 5px;
    border-bottom: 1px solid #e0e0e0;
}



/* 设置QLineEdit（搜索框）的样式 */
QLineEdit {
    background-color: #FFFFFF;
    border: 1px solid #1E90FF;
    border-radius: 5px;
    padding: 8px;
    font-size: 20px;
}

QLineEdit:focus {
    border: 1px solid #63B8FF;
}

/* 设置QPushButton（按钮）的样式 */
QPushButton {
    background-color: #1E90FF;
    color: white;
    border-radius: 8px;
    padding: 12px 20px;
    font-size: 20px;
    font-weight: bold;
    min-width: 120px;
}

QPushButton:hover {
    background-color: #63B8FF;  /* 悬浮时的背景色 */
}

QPushButton:pressed {
    background-color: #4682B4;  /* 按下时的背景色 */
}

/* 设置状态标签的样式 */
QLabel#statusLabel {
    font-size: 20px;
    color: #333333;
}

/* 设置版权标签的样式 */
QLabel#copyrightLabel {
    font-size: 20px;
    color: #AAAAAA;
    text-align: center;
}

/* 设置水平间隔的样式 */
QSpacerItem {
    background-color: transparent;
}

/* 设置退出登录按钮的样式 */
QPushButton#logoutButton {
    background-color: #1E90FF;
    color: white;
    border-radius: 8px;
    padding: 10px 20px;
    font-size: 20px;
}

QPushButton#logoutButton:hover {
    background-color: #63B8FF;  /* 悬浮时的背景色 */
}

/* 设置帮助按钮的样式 */
QPushButton#helpButton {
    background-color: transparent;
    font-size: 20px;
    color: #1E90FF;
}

QPushButton#helpButton:hover {
    text-decoration: underline;
}

/* 设置整个窗口的阴影效果 */

/* 设置QTreeWidget的字体和选项 */
QTreeWidget::item {
    font-size: 20px;
    padding: 10px;
    min-height: 40px;  /* 增加每项的高度，使其更加分散 */
}

/* 设置QTreeWidget项的选中效果 */
QTreeWidget::item:selected {
    background-color: #1E90FF;  /* 选中时背景色 */
    color: white;  /* 选中时文字颜色 */
}

/* 设置QLabel的图标显示 */
QLabel#merchantAvatar {
    border-radius: 25px;
    border: 2px solid #1E90FF;
}

/* 状态栏样式 */
QHBoxLayout#statusLayout {
    background-color: #F0F8FF;
    border-top: 1px solid #1E90FF;
    padding: 10px;
}

/* 设置按钮和标签的圆角效果 */
QPushButton, QLabel {
    border-radius: 10px;
}
