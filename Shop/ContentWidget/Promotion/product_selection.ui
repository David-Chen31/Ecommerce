}

/* QLineEdit 样式 */
QLineEdit {
    background-color: #F5F5F5;
    border: 2px solid #1E90FF; /* 天蓝色边框 */
    border-radius: 8px;
    padding: 10px;
    font-size: 20px;
    color: #333333;
}

QLineEdit:focus {
    border: 2px solid #63B8FF; /* 聚焦时浅天蓝色 */
}

/* QPushButton 样式 */
QPushButton {
    background-color: #1E90FF; /* 天蓝色背景 */
    color: white;
    border-radius: 8px;
    padding: 10px 20px;
    font-size: 20px;
    font-weight: bold;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

QPushButton:hover {
    background-color: #63B8FF; /* 浅天蓝色背景 */
    transform: scale(1.05); /* 放大效果 */
}

QPushButton:pressed {
    background-color: #4682B4; /* 深蓝色背景 */
    transform: scale(0.95); /* 缩小效果 */
}

/* QScrollArea 样式 */
QScrollArea {
    border: 1px solid #1E90FF;
    background-color: #F5F5F5; /* 浅灰色背景 */
}

QScrollArea &gt; QWidget {
    background-color: #FFFFFF;
}

QScrollBar:vertical {
    background: #E0E0E0; /* 滚动条背景浅灰色 */
    width: 14px;
    border-radius: 7px;
}

QScrollBar::handle:vertical {
    background: #1E90FF; /* 滚动条天蓝色 */
    border-radius: 7px;
}

QScrollBar::handle:vertical:hover {
    background: #63B8FF; /* 悬浮时滚动条浅天蓝色 */
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: transparent;
    border: none;
    height: 0px;
}

/* QScrollArea 内部内容样式 */
QScrollArea QWidget {
    background-color: #FFFFFF;
    border: none;
}

/* QPushButton 布局间距 */
QHBoxLayout &gt; QPushButton {
    margin: 8px;
}
